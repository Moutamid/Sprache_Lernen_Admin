<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.SelectActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        android:padding="21dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="43dp"
            android:text="Crafting Your Curriculum"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="43dp"
            android:text="Empower Your Lesson Plans: Build Concepts or Boost Practice with a Click"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/grey"
            android:gravity="start|center"
            android:padding="12dp"
            android:text="Add New Topic"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/round_keyboard_arrow_right_24"
            app:iconGravity="end"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:gravity="start|center"
            android:padding="12dp"
            android:text="Add Content"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/round_keyboard_arrow_right_24"
            app:iconGravity="end"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:gravity="start|center"
            android:padding="12dp"
            android:text="Add Exercise"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/round_keyboard_arrow_right_24"
            app:iconGravity="end"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/newExercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:gravity="start|center"
            android:padding="12dp"
            android:text="New Exercise"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/round_keyboard_arrow_right_24"
            app:iconGravity="end"
            app:iconTint="@color/black" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/trialQuestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:gravity="start|center"
            android:padding="12dp"
            android:text="Add Trial Question"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/round_keyboard_arrow_right_24"
            app:iconGravity="end"
            app:iconTint="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="12dp"
            android:background="@color/grey" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:gravity="start|center"
            android:padding="12dp"
            android:text="View All Content"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/round_keyboard_arrow_right_24"
            app:iconGravity="end"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewExercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:gravity="start|center"
            android:padding="12dp"
            android:text="View All Exercise"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/round_keyboard_arrow_right_24"
            app:iconGravity="end"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewTrial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:gravity="start|center"
            android:padding="12dp"
            android:text="All Trial Questions"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/round_keyboard_arrow_right_24"
            app:iconGravity="end"
            app:iconTint="@color/black" />

    </LinearLayout>
</RelativeLayout>